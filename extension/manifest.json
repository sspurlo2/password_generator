{
  "manifest_version": 3,
  "name": "Memorable Password Generator + Tester",
  "version": "0.1.0",
  "default_locale": "en",
  "icons": {
    "128": "/icons/icon128.png"
  },
  "action": {
    "default_title": "Password Tool",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "permissions": ["storage"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["SNPro-VariableFont_wght.ttf"],
      "matches": ["<all_urls>"]
    }
  ]
}
